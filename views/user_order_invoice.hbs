


{{#if carts}}

<div class="receipt-content">



	
    <div class="container bootstrap snippets bootdey">
		<div class="row">
			<div class="col-md-12">
        
				<div class="invoice-wrapper">
          <div>

          <div id="invoice">

          <h2 style="text-align: center; margin-top: 100px; margin-bottom: 50px;">INVOICE</h2>
					<div class="intro">
						Hi <strong>{{orderInvoice.deliveryDetails.fname}} &nbsp; {{orderInvoice.deliveryDetails.lname}}</strong>, 
						<br>
						This is the receipt for a payment of <strong>₹.{{orderInvoice.GrandTotal}}</strong> for your Order
					</div>

					<div class="payment-info">
						<div class="row">
							<div class="col-sm-6">
								<span>Payment No.</span>
								<strong>434334343</strong>
							</div>
							<div class="col-sm-6 text-right">
								<span>Order Date</span>
								<strong>{{orderInvoice.date}}</strong>
							</div>
						</div>
					</div>

					<div class="payment-details">
						<div class="row">
							<div class="col-sm-6">
								<span>Name</span>
								<strong>
									{{orderInvoice.deliveryDetails.fname}} &nbsp; {{orderInvoice.deliveryDetails.lname}}
								</strong>
								<p>
									{{orderInvoice.deliveryDetails.house_name}}<br>
									{{orderInvoice.deliveryDetails.address1}}<br>
									{{orderInvoice.deliveryDetails.address2}}<br>
									{{orderInvoice.deliveryDetails.town_city}}<br>
                                    {{orderInvoice.deliveryDetails.country_state}} <br>
									<a href="#">
										{{user.email}}
									</a>
								</p>
							</div>
						
						</div>
					</div>

					<div class="line-items">
						<div class="headers clearfix">
							

                            <div class="table-responsive">
  <table class="table " cellspacing="0" id="tblSearch"  style=" border-style: solid;3 px ;">
  <thead >
    <tr>
      <th >No</th>
      <th >Image</th>
      <th>Item Id</th>
      <th>Qty</th>
      <th>Price</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
      {{#each orderInvoice.products}}
    <tr>
      <th scope="row">{{add @index '1'}}</th>
      <td>  <img style="width: 70px; height: 60px;" src="/product-image/{{this.item}}__1.jpg" alt=""></td>
      <td>{{this.item}}</td>
      <td>{{this.quantity}}</td>
      {{!-- <td>{{this.userId}}</td> --}}
      {{!-- <td>{{this.newprice}}</td> --}}
      <td>{{this.price}}</td>
      <td>{{this.totalprice}}</td>
    </tr>
    {{/each}}
    
  </tbody>
  </table>
</div>





                    
						
						<div class="total text-right">
							<p class="extra-notes">
								<strong>Extra Notes</strong>
								Please send all items at the same time to shipping address by next week.
								Thanks a lot.
							</p>
							<div class="field">
								Subtotal <span>₹.{{orderInvoice.GrandTotal}}</span>
							</div>
							<div class="field">
								Shipping <span>₹. 0.00</span>
							</div>
							{{!-- <div class="field">
								Discount <span>4.5%</span>
							</div> --}}
							<div class="field grand-total">
								Total <span>₹.{{orderInvoice.GrandTotal}}</span>
							</div>
						</div>


            </div>

            </div>


					</div>
          <center>

          						<div style="margin-top: 30px;" class="">
							
								<button id="download" class="btn btn-outline-danger"><i class="fa fa-print"></i>
								Download PDF
                </button>
							
						</div>

            </center>

          </div>
				</div>

				{{!-- <div class="footer">
					Copyright © 2014. company name
				</div> --}}
			</div>
		</div>
	</div>
      
{{/if}}




