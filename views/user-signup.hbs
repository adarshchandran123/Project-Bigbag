

<div class="container">
    <div class="row">

        <center>
        <div >
            <a  href="./" class="brand-wrap">
			<img  class="logo1"   src="../images/logo.svg">
		</a>
        </div>
        </center>

    </div>
</div>




<div class="row  col-12">

       <div class="wrapper" style="padding-top: 5px;">
        <div class="card">
          <form style="border: solid 5px #961010;" action="/signupsubmit" id="valid" method="POST" class="d-flex flex-column">
            <div class="h3 text-center " style="color: #961010;">sign up</div>
            <div class="d-flex align-items-center input-field my-3 mb-2">
              <span class="far fa-user p-2"></span>
              <input
                type="text"
                placeholder="Username "
                  name="username"
              
                class="form-control"
              />

              
            </div>

            <div class="d-flex align-items-center input-field my-3 mb-2">
              <span class="far fa-user p-2"></span>
              <input
                type="tel"
                placeholder="mobile"
                  name="mobile"
              
                class="form-control"
              />
            </div>
            <div class="d-flex align-items-center input-field my-3 mb-2">
              <span class="far fa-user p-2"></span>
              <input
                type="text"
                placeholder="Email"
                  name="email"
              
                class="form-control"
                  
              />
              {{#if emailvalid}}
                <p style="color: red;">Email id already used</p>
              {{/if}}
            </div>
            <div class="d-flex align-items-center input-field mb-2">
              <span class="fas fa-lock p-2"></span>
              <input
                type="password"
                placeholder="Password"
                  name="password"
                
                class="form-control"
                id="pwd"
              />
              <button class="btn" onclick="showPassword()">
                <span class="fas fa-eye-slash"></span>
              </button>
            </div>

            

            <div
              class="d-sm-flex align-items-sm-center justify-content-sm-between"
            >
              
            </div>
            <div class="my-3">
              <input type="submit" value="sign in" class="btn btn-primary" />
            </div>
            <div class="mb-3">
              <span class="text-light-white">go back to login page     </span>
              <button style="background-color: rgb(1, 7, 8);"><a href="/userlogin">Login page</a></button>
            </div>
          </form>
          
        
        </div>
      </div>



      <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>



      <script>

       $(document).ready(function(){
  $("#valid").validate({
    rules:{
      username:{
        required:true
      },
      mobile:{
        required:true,
        minlength:10,
        maxlength:10
      }
    },
    messages:{
      email:"Enter Email",
      password:"Enter password"
    }
  })
})

      </script>
