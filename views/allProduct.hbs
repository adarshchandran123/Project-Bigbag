
<p style="font-size: 40px; margin-top: 50px; font-weight: bolder; text-align: center; font-family: 'Acme', sans-serif;">PRODUCTS</p>


<div class="container" style="margin-top: 100px;">
    <div class="row">
		{{#each product}}
        <div class=" col-sm-12 col-md-6 col-lg-3">
				
		<div class="card card-product-grid">
			<a href="/product-detail?id={{this._id}}" class="img-wrap"> <img src="/product-image/{{this._id}}__1.jpg"> </a>
			<figcaption class="info-wrap">
				<a style="font-weight: bolder;" href="/product-detail?id={{this._id}}" class="title">{{this.productName}}</a>
				<a href="" class="title">{{this.discription}}</a>
				<div class="price mt-1">₹ {{this.newprice}} <span style="padding-left: 10px; color: darkgray;">₹ <s>{{this.oldprice}}</s></span></div> <!-- price-wrap.// -->
				<div>
					<a style="margin-top: 10px;" class="btn btn-success" href="">Buy Now</a>
					
					<button style="margin-top: 10px;" onclick="addToCart('{{this._id}}')" class="btn btn-primary" >Add to Cart <i class="fas fa-shopping-cart"></i></button>
				</div>
			</figcaption>
		</div>
		

	</div>
	{{/each}}

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>

	function addToCart(proId){
		$.ajax({
			url:'/addToCart?id='+proId,
			method:'get',
			success:(response)=>{
				if(response.status){
					let count=$('#cart-count').html()
					count=parseInt(count)+1
					$("#cart-count").html(count)
				}
			}
		})
	}

</script>

















