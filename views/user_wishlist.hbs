        <div class="col-sm-12 col-md-6 col-lg-3">

		<div style="margin-top: 50px;" class="card card-product-grid">
			<a href="/product-detail?id={{this.wishlist._id}}" class="img-wrap"> <img src="/product-image/{{this.wishlist._id}}__1.jpg"> </a>
			<figcaption class="info-wrap">
				<a style=" font-weight: bolder; font-size: x-large;" href="/product-detail?id={{this.wishlist._id}}" class="title">{{this.wishlist.productName}}</a>
        <a href="/product-detail?id={{this.wishlist._id}}" style="color: black; font-weight: bolder;" class="title">{{this.wishlist.category}}</a>
				<a href="/product-detail?id={{this.wishlist._id}}" class="title">{{this.wishlist.discription}}</a>
				
        <div class="price mt-1">₹ {{this.wishlist.newprice}} 
          
          {{#eq this.wishlist.newprice this.wishlist.MRP}}
          
          {{else}}
          <span style="padding-left: 10px; color: darkgray;">MRP : ₹ <s>{{this.wishlist.MRP}}</s></span> 
          {{/eq}}
        </div> <!-- price-wrap.// -->



        {{#if this.wishlist.offer}}
        <div><span style="color: rgb(15, 167, 15); font-weight: bolder;">{{this.wishlist.offer}}%</span> off</div>
        {{else}}
        <div style="opacity: 0%;"><span style="color: rgb(15, 167, 15); opacity: 0%; font-weight: bolder;">{{this.wishlist.offer}}</span>% off</div>
        {{/if}}




