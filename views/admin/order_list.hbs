<body class="dark-edition">

  <div class="container">
    <div class="row">

      <div style="margin-top: 100px;">
        <p
          style="margin-bottom: 40px; color: white; font-size: 40px; font-family: 'Acme', sans-serif;"
        >ORDER LIST</p>

        <div class="table-responsive">
          <table
            class="table table-dark table-striped table-hover"
            cellspacing="0"
            id="tblSearch"
            style="background-color: #5159bf; border-style: solid;3 px ; "
          >
            <thead>
              <tr>
                <th style="color: white; font-weight: bolder;">No</th>
                <th style="color: white; font-weight: bolder;">Date</th>
                <th style="color: white; font-weight: bolder;">Name</th>
                <th style="color: white; font-weight: bolder;">payment</th>

                <th style="color: white; font-weight: bolder;">Total Amount</th>
                <th style="color: white; font-weight: bolder;">Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each allOrders}}
                <tr>
                  <th style="color: white;" scope="row">{{add @index "1"}}</th>

                  <td style="color: white;">{{this.date}}</td>
                  <td style="color: white;">{{this.deliveryDetails.fname}}
                    <span
                      style="padding-left: 5px;"
                    >{{this.deliveryDetails.lname}}</span>
                  </td>

                  <td style="color: white;">{{this.paymentMethod}}</td>

                  <td style="color: white;">{{this.GrandTotal}}
                    {{this.productprice}}</td>
                  <td>
                    <a
                      href="/admin/viewOrderProduct/{{this._id}}"
                      class="btn btn-danger"
                    >View Details</a>

                  </td>
                </tr>
              {{/each}}

            </tbody>
          </table>
        </div>

      </div>

    </div>
  </div>

</body>

<script>

  $(document).ready( function () { $('#tblSearch').DataTable(); } );

</script>