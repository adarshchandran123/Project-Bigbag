                    value="{{productdetail.date}}"
              class="form-control"
              id="exampleInputPassword1"
            />
          </div>


          <div class="mt-5">
            <label
              for="exampleInput2"
              class="form-label1"
            >Stock QTY</label>
            <input
              type="number"
                name="qty"
                    value="{{productdetail.qty}}"
              class="form-control"
              id="exampleInputPassword1"
            />
          </div>

          <div class="mt-5">
            <img id="imagePreview1" style="width: 70px; height: 60px;" src="/product-image/{{productdetail._id}}__1.jpg" alt="">
            <div id="errmssg1"></div>
            <label
              for="exampleInput2"
              class="form-label1"
            >IMAGE-1</label>
            
            <input
              type="file"
                name="image1"
                    onchange="fileValidation1(event)"
                    
              class="form-control"    
              id="file1"
            />
          </div>

          <div class="mt-5">
            <img id="imagePreview2" style="width: 70px; height: 60px;" src="/product-image/{{productdetail._id}}__2.jpg" alt="">
            <div id="errmssg2"></div>
            <label
              for="exampleInput2"
              class="form-label1"
            >IMAGE-2</label>
            
            <input
