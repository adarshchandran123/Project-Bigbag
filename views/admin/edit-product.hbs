            />
          </div>

          <div class="mt-5">
            <img id="imagePreview3"  style="width: 70px; height: 60px;" src="/product-image/{{productdetail._id}}__3.jpg"  alt="">
            <label
              for="exampleInput2"
              class="form-label1"
            >IMAGE-3</label>
            <div id="errmssg3"></div>
            <input
              type="file"
                name="image3"
                   onchange="fileValidation3(event)"
              class="form-control"    
              id="file3"
            />
          </div>

         
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </div> <br><br><br><br>

      </div>

    </div>

  </div>









</body>













    <script>
        function fileValidation3(event) {
            var fileInput = 
                document.getElementById('file3');
              
            var filePath = fileInput.value;
          
            // Allowing file type
            var allowedExtensions = 
                    /(\.jpg|\.jpeg|\.png|\.gif)$/i;
              
            if (!allowedExtensions.exec(filePath)) {
                document.getElementById('errmssg3').innerHTML='<p  style="color: red; font-weight: bolder; font-size: large; " >Invalid file type<p>'
                fileInput.value = '';
                return false;
            } 
            else 
            {
               document.getElementById('errmssg3').innerHTML=''
                // Image preview

               document.getElementById(
                            'imagePreview3').src=URL.createObjectURL(event.target.files[0])

               
            }
        }
    </script>



