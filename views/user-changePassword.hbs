<div class="row  col-12">
    <div class="h3 text-center mt-5 " style="color: #961010;">Change Password</div>

      <div style="padding-top: 10px;" class="wrapper">
        <div class="card">
          <form style="" action="/changepassword" id="valid" method="POST" class="d-flex flex-column">
            
            <div style="color: #961010;" class="d-flex align-items-center input-field my-3 mb-5">
              <span class="far fa-user p-2"></span>
              <input  type="password" placeholder="enter new password "  name="password"  id="pss1"  class="form-control"  />
            </div>
             
            <p id="msg"></p>
    


            <div style="color: #961010;" class="d-flex align-items-center input-field my-3 mb-5">
              <span class="far fa-user p-2"></span>
              <input type="password"  placeholder="confirm password " onkeyup="check()" id="pss2"  name="password1"  class="form-control" />
              
            </div>



           <div class="d-flex align-items-center input-field my-3 mb-5" >
              <input type="submit" value="Submit" class="btn btn-primary" style="color: black;"/>
            </div>
            
              
            </div>
           
           
          </form>
          
          

        </div>
      </div>

    </div>

<script>
 
 function check(){
     if (document.getElementById('pss1').value ==
    document.getElementById('pss2').value) {
    document.getElementById('msg').style.color = 'green';
    document.getElementById('msg').innerHTML = 'matching';
  } else {
    document.getElementById('msg').style.color = 'red';
    document.getElementById('msg').innerHTML = 'not matching';
  }


 }

</script>
